{
  "name": "rruler",
  "version": "0.0.2",
  "description": "Parse & Format rrule in Russian language",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "nodemon -e .ts --watch src --watch tests --exec 'jest'",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "dev": "nodemon -e .ts --watch src --exec 'yarn build; node dist/cjs/index.js'",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.ts'",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/your-repo.git"
  },
  "keywords": [
    "typescript",
    "library"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@types/lodash": "^4.17.7",
    "@types/moment": "^2.13.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "simple-rrule": "^1.4.5"
  }
}
